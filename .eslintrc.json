{
  "extends" : "@edenjs/eden",
  "rules": {
    "consistent-return": "off",
    "guard-for-in": "off",
    "max-len": "off",
    "no-control-regex": "off",
    "no-restricted-syntax": "off",
    "padded-blocks": "off",
    "prefer-rest-params": "off"
  },
  "env": {
    "commonjs": true,
    "node": true,
    "mocha": true
  }
}
